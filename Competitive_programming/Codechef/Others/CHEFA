#include<bits/stdc++.h>
using namespace std;
int main()
{
    long long t,n,i;
    cin>>t;
    while(t--)
    {
        cin>>n;
        long long a[n],ans=0;
        for(i=0;i<n;i++)
            cin>>a[i];
        sort(a,a+n);
        for(i=n-1;i>=0;i=i-2)
        {
            ans=ans+a[i];
        }
        cout<<ans<<endl;
        ans=0;
    }
}
